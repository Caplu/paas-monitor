{
  "id": "paas-monitor",
  "cpus": 0.25,
  "mem": 128,
  "instances": 4,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mvanholsteijn/paas-monitor:latest",
      "network": "BRIDGE",
      "forcePullImage": true,
      "portMappings": [
        {
          "containerPort": 1337,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/status",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "env": {
    "RELEASE": "v2",
    "MESSAGE": "hello from Marathon!"
  }
}
