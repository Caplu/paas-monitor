{
  "id": "paas-monitor",
  "cpus": 0.25,
  "mem": 128,
  "instances": 4,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mvanholsteijn/paas-monitor:latest",
      "network": "BRIDGE",
      "forcePullImage": true,
      "portMappings": [
        {
          "containerPort": 1337,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/status",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 60,
      "intervalSeconds": 60,
      "timeoutSeconds": 2,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": true
    }
  ],
  "env": {
    "RELEASE": "v3",
    "MESSAGE": "hello from Azure!"
  },
  "labels": {
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"paas-monitor.127.0.0.1.xip.io"
  }
}
